{
	"compilerOptions": {
		"outDir": "lib-dist",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"declaration": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"strict": true,

		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src/lib"],
	"exclude": [
		"node_modules",
		"src/app",
		"lib-dist",
		"app-dist",
		"example",
		"rollup.config.js"
	]
}
